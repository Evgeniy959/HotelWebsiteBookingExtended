@model IEnumerable<HotelAdmin.Models.Entity.OrderPay>

@{
    ViewData["Title"] = "Index";
    int count = 1+(ViewBag.CurrentPage-1)*10;
}

<h1 class="text-center">Список заказов с предоплатой</h1>

<table class="table table-1">
    <thead>
        <tr class="tab-row">
            <th scope="col">#</th>
            <th scope="col">Номер</th>
            <th scope="col">Дата заказа</th>
            <th scope="col">Количество гостей</th>
            <th scope="col">Статус</th>
            <th scope="col">Email Клиента</th>
            <th scope="col"><div class="col-14"></div></th>
            <th scope="col"><div class="col-14">Actions</div></th>
            <th scope="col"><div class="col-14"></div></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="tab-row">
            <th scope="row">@(count++)</th>
            <td>@item.Id</td>
            <td>@item.Date</td>
            <td>@item.GuestCount</td>
            <td>@item.Status</td>
            <td>@item.Client.Email</td>
            <td><div class="col-14"><a asp-action="Edit" asp-controller="OrderPay" asp-route-id="@item.Id" class="form-control btn btn-secondary">Edit</a></div></td>
            <td><div class="col-14"><a asp-action="Details" asp-controller="OrderPay" asp-route-id="@item.Id" class="form-control btn btn-info">Details</a></div></td>
            <td><div class="col-14"><a asp-action="Delete" asp-controller="OrderPay" asp-route-id="@item.Id" class="form-control btn btn-danger">Delete</a></div></td>
        </tr>
}
    </tbody>
</table>
<br />
<nav aria-label="Page navigation example" class="d-flex align-content-center justify-content-sm-center">
    <ul class="pagination">

        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
               asp-action="Index"
               asp-controller="OrderPay"
               asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
            </li>
        }

        @for (var i = ViewBag.CurrentPage - 3; i <= ViewBag.CurrentPage + 3; i++)
        {

            @if (i > 0 && i <= ViewBag.TotalPages)
            {
                @if (ViewBag.CurrentPage == i)
                {
                    <li class="page-item active">
                        <a class="page-link"
                        asp-action="Index"
                        asp-controller="OrderPay"
                        asp-route-page="@i">@i</a>
                    </li>
                }
                else
                {

                    <li class="page-item">
                        <a class="page-link"
                        asp-action="Index"
                        asp-controller="OrderPay"
                        asp-route-page="@i">@i</a>
                    </li>
                }
            }

        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                asp-action="Index"
                asp-controller="OrderPay"
                asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
            </li>
        }

    </ul>
</nav>

