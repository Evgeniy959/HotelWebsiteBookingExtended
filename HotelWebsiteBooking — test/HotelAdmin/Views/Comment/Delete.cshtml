@model HotelAdmin.Models.Entity.Comment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 info-sise">Name</dt>
            <dd class="col-sm-8 info-sise">@Model.Name</dd>
            <dt class="col-sm-4 info-sise">Email</dt>
            <dd class="col-sm-8 info-sise">@Model.Email</dd>
            <dt class="col-sm-4 info-sise">Content</dt>
            <dd class="col-sm-8 info-sise">@Model.Content</dd>
            <dt class="col-sm-4 info-sise">Date</dt>
            <dd class="col-sm-8 info-sise">@Model.Date</dd>
        </dl>
    </div>    
</div>
<br/>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Сancel</a>
    </form>
</div>
