@model IEnumerable<HotelWebsiteBooking.Models.Entity.Comment>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>MyHotel A Premium</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations for international
                        travel and for finding low-priced hotel rooms.
                    </p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Забронировать номер</h3>
                    <form asp-action="Search" asp-controller="Room" method="post">
                        <div class="check-date">
                            <label for="date-in">ДАТА ЗАЕЗДА:</label>
                            <input required name="start" type="text" class="date-input" id="date-in">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="check-date">
                            <label for="date-out">ДАТА ВЫЕЗДА:</label>
                            <input required name="end" type="text" class="date-input" id="date-out">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="select-option">
                            <label for="guest">ГОСТИ:</label>
                            <select id="guest" name="count">
                                <option value="1">1 Человек</option>
                                <option value="2">2 Человек</option>
                                <option value="3">3 Человек</option>
                                <option value="4">4 Человек</option>
                            </select>
                        </div>
                        <button type="submit">Найти номер</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="img/hero/sirius-deluxe.jpg"></div>
        <div class="hs-item set-bg" data-setbg="img/hero/sirius-spa.jpg"></div>
        <div class="hs-item set-bg" data-setbg="img/hero/sirius4.jpg"></div>
        <div class="hs-item set-bg" data-setbg="img/hero/sirius1.jpg"></div>
    </div> 
</section>
<!-- Hero Section End -->
<!-- Testimonial Section Begin -->
<section class="testimonial-section spad">
    <div class="container">
        <div class="row">            
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Коментарии</span>
                    <h2>Что говорят клиенты?</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="testimonial-slider owl-carousel">
                @foreach (var comment in Model)
                {
                    <div class="ts-item">
                        <p>
                            @comment.Content
                        </p>
                        <div class="ti-author">
                            <div class="rating">
                                <i class="icon_star"></i>
                                <i class="icon_star"></i>
                                <i class="icon_star"></i>
                                <i class="icon_star"></i>
                                <i class="icon_star-half_alt"></i>
                            </div>
                                <h5> - @comment.Name</h5>
                        </div>
                        <img src="img/testimonial-logo.png" alt="">
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonial Section End -->
