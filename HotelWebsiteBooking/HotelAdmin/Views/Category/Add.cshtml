@model HotelAdmin.Models.Entity.Category

@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="card" style="margin-top:15px">
                <div class="card-header">
                    <h5 class="card-title text-center"> Добавить категорию</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Add" asp-controller="Category" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Path" value="Standard" />
                        <div class="form-group">
                            <label class="control-label">Название</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input name="Photo" class="form-control" type="file">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonsCount" class="control-label"></label>
                            <input asp-for="PersonsCount" class="form-control" />
                            <span asp-validation-for="PersonsCount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Площадь</label>
                            <input asp-for="Square" class="form-control" />
                            <span asp-validation-for="Square" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="form-control btn btn-primary" value="Добавить" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" asp-controller="Category" class="form-control btn btn-info">К списку</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="/lib/chosen/chosen.jquery.js"></script>
    <script>
        $("#tariffPlans").chosen();
    </script>
}
