@model HotelAdmin.Models.Entity.Comment

@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="card" style="margin-top:15px">
                <div class="card-header">
                    <h5 class="card-title text-center"> Add new comment</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Add" asp-controller="Comment" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control nav" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" type="email" class="form-control nav" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="control-label"></label>
                            <input asp-for="Content" class="form-control nav" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="form-control btn btn-primary" value="Add comment" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" asp-controller="Comment" class="form-control btn btn-info">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
