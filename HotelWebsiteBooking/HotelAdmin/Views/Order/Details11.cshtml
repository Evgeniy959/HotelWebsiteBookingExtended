@model HotelAdmin.Models.Entity.Order

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Details</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelAdmin.styles.css" asp-append-version="true" />
</head>
<body class="auth">
<h1>Детали бронирования</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                Номер заказа:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата заказа:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-4 info-sise">
                Количество гостей:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.GuestCount)
            </dd>
            <dt class="col-sm-4 info-sise">
                Статус:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-4 info-sise">
                Имя клиента:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Name)
            </dd>
            <dt class="col-sm-4 info-sise">
                Фамилия клиента:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Surname)
            </dd>
            <dt class="col-sm-4 info-sise">
                Почта:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Email)
            </dd>
            <dt class="col-sm-4 info-sise">
                Телефон:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Phone)
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата заезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Start.ToLongDateString()
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата выезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.End.ToLongDateString()
            </dd>
            <dt class="col-sm-4 info-sise">
                Номер комнаты:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Room.Number)
            </dd>
            <dt class="col-sm-4 info-sise">
                Категория:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Room.Category.Name)
            </dd>
            <dt class="col-sm-4 info-sise">
                Тариф:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Tariff.TariffPlan.Description)
            </dd>
            <dt class="col-sm-4 info-sise">
                Цена:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Client.Tariff.Price)
            </dd>
        </dl>
    </div>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
