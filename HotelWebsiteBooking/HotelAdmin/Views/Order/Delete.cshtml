@model HotelAdmin.Models.Entity.Order

@{
    ViewData["Title"] = "Delete";
}

<div class="delete">
<h3>Вы уверены, что хотите удалить это?</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                Номер заказа:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Id
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата заказа:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Date
            </dd>
            <dt class="col-sm-4 info-sise">
                Имя клиента:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Name
            </dd>
            <dt class="col-sm-4 info-sise">
                Фамилия клиента:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Surname
            </dd>
            <dt class="col-sm-4 info-sise">
                Email
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Email
            </dd>
            <dt class="col-sm-4 info-sise">
                Телефон:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Phone
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата заезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.Start.ToLongDateString()
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата выезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Client.End.ToLongDateString()
            </dd>
        </dl>
    </div>    
</div>
<br/>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Сancel</a>
    </form>
</div>
</div>
