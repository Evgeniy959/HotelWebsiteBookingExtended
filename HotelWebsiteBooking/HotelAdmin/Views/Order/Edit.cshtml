@model HotelAdmin.Models.Entity.Order

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="card" style="margin-top:15px">
                <div class="card-header">
                    <h5 class="card-title text-center">Изменить статус</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ClientId" />
                        <div class="form-group">
                            <label class="control-label">Номер</label>
                            <input asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Дата заказа</label>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Количество гостей</label>
                            <input asp-for="GuestCount" class="form-control" />
                            <span asp-validation-for="GuestCount" class="text-danger"></span>
                        </div>
                        <label class="control-label">Статус</label>
                        <select class="form-select" name="status" aria-label="Default select example">
                            <option selected>Выберите статус</option>
                            <option value="без предоплаты">без предоплаты</option>
                            <option value="отправлено">отправлено</option>
                        </select>
                        <br />
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="form-control btn btn-primary" value="Сохранить" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" asp-controller="Order" class="form-control btn btn-secondary">Отменить</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
