@model HotelAdmin.Models.Entity.RoomDate

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                Start date
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Start)
            </dd>
            <dt class="col-sm-4 info-sise">
                End date
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.End)
            </dd>
            <dt class="col-sm-4 info-sise">
                Room number
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Number)
            </dd>
            <dt class="col-sm-4 info-sise">
                Сategory
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Category.Name)
            </dd>
            <dt class="col-sm-4 info-sise">
                Price
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Category.TariffAdmins.Min(t => t.Price))
            </dd>
            <dt class="col-sm-4 info-sise">
                Persons count
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Category.PersonsCount)
            </dd>
        </dl>
    </div>    
</div>
<br/>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Сancel</a>
    </form>
</div>
