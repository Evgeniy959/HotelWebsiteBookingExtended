@model HotelAdmin.Models.Entity.RoomDate

@{
    ViewData["Title"] = "Delete";
}

<div class="delete">
<h3>Вы уверены, что хотите удалить это?</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                Дата заезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Start)
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата выезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.End)
            </dd>
            <dt class="col-sm-4 info-sise">
                Номер комнаты:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Number)
            </dd>
            <dt class="col-sm-4 info-sise">
                Категория:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Category.Name)
            </dd>
            <dt class="col-sm-4 info-sise">
                Цена, руб:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Room.Category.TariffAdmins.Min(t => t.Price)
            </dd>
            <dt class="col-sm-4 info-sise">
                Вместимость, чел:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Category.PersonsCount)
            </dd>
        </dl>
    </div>    
</div>
<br/>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Сancel</a>
    </form>
</div>
</div>
