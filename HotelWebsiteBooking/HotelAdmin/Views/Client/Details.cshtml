@model HotelAdmin.Models.Entity.Client

@{
    ViewData["Title"] = "Details";
}

<div class="details">
<h2>Подробности</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-4 info-sise">
                Имя клиента:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4 info-sise">
                Фамилия клиента:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt class="col-sm-4 info-sise">
                Email
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-4 info-sise">
                Телефон:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата заезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.Start.ToLongDateString()
            </dd>
            <dt class="col-sm-4 info-sise">
                Дата выезда:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Model.End.ToLongDateString()
            </dd>
            <dt class="col-sm-4 info-sise">
                Номер комнаты:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Number)
            </dd>
            <dt class="col-sm-4 info-sise">
                Категория:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Room.Category.Name)
            </dd>
            <dt class="col-sm-4 info-sise">
                Тариф:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Tariff.TariffPlan.Description)
            </dd>
            <dt class="col-sm-4 info-sise">
                Цена:
            </dt>
            <dd class="col-sm-8 info-sise">
                @Html.DisplayFor(model => model.Tariff.Price)
            </dd>
        </dl>
    </div>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Изменить</a>
        <a asp-action="Index" class="btn btn-info">К списку</a>
</div>
</div>
