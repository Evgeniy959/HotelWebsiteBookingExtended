@model HotelAdmin.Models.Entity.Room

@{
    ViewData["Title"] = "Add";
}

@if (TempData.ContainsKey("Status"))
{
    <div class="alert alert-danger" role="alert">
        <strong>Notification!</strong> @TempData["Status"]
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="card" style="margin-top:15px">
                <div class="card-header">
                    <h5 class="card-title text-center"> Добавление комнаты</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Add" asp-controller="Room" method="post" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Номер</label>
                            <input asp-for="Number" class="form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Категория</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categorys" class="form-control">
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <input type="submit" class="form-control btn btn-primary" value="Add room" />
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" asp-controller="Room" class="form-control btn btn-info">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
