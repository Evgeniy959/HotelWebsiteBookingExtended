@model HotelAdmin.Models.Entity.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class ="row">
    <div class="col-md-6">
        <img src="~/@Html.DisplayFor(model => model.Category.Photo)" alt="Photo" style="height: 350px;">
    </div>
    <div class="col-md-6 photo-col">
        <dl class="row">
            <dt class="col-sm-4 delete-sise">
                Номер:
            </dt>
            <dd class="col-sm-8 delete-sise">
                @Html.DisplayFor(model => model.Number)
            </dd>
            <dt class="col-sm-4 delete-sise">
                Категория:
            </dt>
            <dd class="col-sm-8 delete-sise">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>            
            <dt class="col-sm-4 delete-sise">
                Количество мест:
            </dt>
            <dd class="col-sm-8 delete-sise">
                @Html.DisplayFor(model => model.Category.PersonsCount)
            </dd>
            <dt class="col-sm-4 delete-sise">
                Площадь:
            </dt>
            <dd class="col-sm-8 delete-sise">
                @Html.DisplayFor(model => model.Category.Square)
            </dd>
            <dt class="col-sm-4 delete-sise">
                Цена от:
            </dt>
            <dd class="col-sm-8 delete-sise">
                @Model.Category.TariffAdmins.Min(t => t.Price)
            </dd>
        </dl>
    </div>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Изменить</a>
    <a asp-action="Index" class="btn btn-info">К списку</a>
</div>
